<% if @transcript: %>
  <p>
    You currently have a
    <a href="app/transcript">transcript on file</a>
  </p>
<% end %>

<form class="form <%= "hide" if @transcript %>" method="post" action="app/transcript" enctype="multipart/form-data">
  <p>
    Upload a transcript .pdf (official or unofficial) that has your
    undergraduate coursework
  </p>
  <input type="file" name="userfile" value="upload"></input>
  <div>
    <br/>
    <input type="submit" class="btn btn-large btn-primary" value="Upload"></input>
  </div>
</form>
